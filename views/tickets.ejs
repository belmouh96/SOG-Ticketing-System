<% include partials/header %>
<h1 style="color: #0090FA; text-align: center;"><%= sport.name %> tickets</h1>
<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://cdn.theatlantic.com/assets/media/img/photo/2016/08/rio-2016-photos-from-days-11-throug/r40_RTX2LIJF/main_1200.jpg?1471544648" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="https://cdn.theatlantic.com/assets/media/img/photo/2016/08/rio-2016-photos-from-days-11-throug/r37_RTX2LRIN/main_1200.jpg?1471544648" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="https://cdn.theatlantic.com/assets/media/img/photo/2016/08/rio-2016-photos-from-days-11-throug/r36_AP16230541703776/main_1200.jpg?1471544648" class="d-block w-100" alt="...">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
    <ul class="list-group">
        <% sport.events.forEach(function(event){ %>
            
                <li class="list-group-item"><%= event.title %> 
                    -- $<%= event.price %> -- @<%= event.venue %>
                    <form action="/events" method=POST>
                        <input name="title" type="hidden" value=<%= event.title %>>
                        <input name="price" type="hidden" value=<%= event.price %>>
                        <input name="venue" type="hidden" value=<%= event.venue %>>
                        <button class="btn btn-xs btn-primary" id="addToCart">Buy Ticket</button>
                    </form>
                </li>
            
        <% }) %>
    </ul>
</div>


